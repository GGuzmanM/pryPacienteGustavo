<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <!-- AppBar overlay -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Popup overlay -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/clinicaDark</item>
        <!-- Otros atributos personalizados si los necesitas -->
    </style>

    <style name="MenuItemStyle">
        <item name="android:textColor">?attr/menuItemColor</item>
    </style>


    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/editTextBackground</item>
        <item name="android:textColor">@color/editTextTextColor</item>
        <item name="hintTextColor">@color/editTextHintColor</item>
    </style>

    <!-- Estilo personalizado para MaterialAutoCompleteTextView -->
    <style name="CustomAutoCompleteTextView" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textColor">@color/editTextTextColor</item>
        <item name="android:textColorHint">@color/editTextHintColor</item>
    </style>
</resources>
